<script>
/* --- type-writer --- */
const txt="Embedded Payments | API Solutioning | CFA";
let i=0;
function type(){if(i<txt.length){document.getElementById('type-writer').textContent+=txt.charAt(i);i++;setTimeout(type,60);}}
window.addEventListener('load',type);

/* --- on-scroll reveal --- */
const obs=new IntersectionObserver((entries)=>{
  entries.forEach(e=>{if(e.isIntersecting)e.target.classList.add('visible');});
},{threshold:.2});
document.querySelectorAll('.fade-up').forEach(el=>obs.observe(el));

/* --- dark/light toggle --- */
function toggleDark(){
  const html=document.documentElement;
  const current=html.style.colorScheme || (window.matchMedia('(prefers-color-scheme:dark)').matches?'dark':'light');
  html.style.colorScheme=current==='dark'?'light':'dark';
  html.style.setProperty('--bg',current==='dark'?'#ffffff':'#0e0e0e');
  html.style.setProperty('--fg',current==='dark'?'#111111':'#f1f1f1');
  html.style.setProperty('--card',current==='dark'?'#f5f5f5':'#1a1a1a');
}
</script>
